{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": "../../",
    "paths": {
      "@core/*": ["core/*"],
      "@plugins/*": ["plugins/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "../../types"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
